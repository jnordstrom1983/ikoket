    </div>

</div>
<style>

    .home-button{
        display:flex;
        color:#fff;
        border-radius:10px;
        overflow:hidden;
        align-items:center;
        margin-bottom:20px;
    }
    .home-button-title{
        font-weight:600;
        font-size:18px;
        flex-grow:1;
        padding-left:20px;
    }
    .home-button-icon{
        font-size:36px;
        height:80px;
        width:100px;
        display:flex;
        align-items:center;
        justify-content:center;

    }
    .home-button.exchange{
        background-color:#9B59B6
    }
    .home-button.exchange .home-button-icon{
        background-color:#8E44AD;
    }    

    .home-button.tools{
        background-color:#E67E22
    }
    .home-button.tools .home-button-icon{
        background-color:#D35400;
    }    

    .home-button.facts{
        background-color:#1ABC9C
    }
    .home-button.facts .home-button-icon{
        background-color:#16A085;
    }    



  

</style>

